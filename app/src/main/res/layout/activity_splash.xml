<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/light_splash_background">

    <TextView
        android:id="@+id/retire_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextStyle.IndieFlower.Display2"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/app_name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextStyle.Cabin.Caption.Big"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_below="@id/retire_heading"
        android:text="@string/splash_caption"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/light_gradient"/>

    <Button
        android:id="@+id/continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        bounceOnTouch="@{true}"
        android:layout_marginLeft="@dimen/margin_huger"
        android:layout_marginRight="@dimen/margin_huger"
        android:layout_marginBottom="@dimen/margin_massive"
        android:text="@string/splash_button_text"
        style="@style/BlackButtonStyle"/>

</RelativeLayout>