<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="laurcode.com.retire.startup.viewmodel.SplashViewModel" />

    </data>

    <RelativeLayout
        android:id="@+id/root_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/light_splash_background">

        <TextView
            android:id="@+id/retire_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextStyle.IndieFlower.Display2"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/app_name"/>

        <com.hanks.htextview.typer.TyperTextView
            android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/splash_caption"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="@color/black"
            app:charIncrease="1"
            app:typerSpeed="40"
            style="@style/TextStyle.Cabin.Caption.Big"
            android:layout_below="@id/retire_heading"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/light_gradient"/>

        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:bounceOnTouch="@{true}"
            android:layout_marginLeft="@dimen/margin_huger"
            android:layout_marginRight="@dimen/margin_huger"
            android:layout_marginBottom="@dimen/margin_massive"
            android:text="@string/splash_button_text"
            style="@style/BlackButtonStyle"/>

        <!--<com.hanks.htextview.typer.TyperTextView-->
            <!--android:id="@+id/app_name"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:layout_below="@id/company_name"-->
            <!--android:text="@string/app_name"-->
            <!--android:visibility="gone"-->
            <!--app:charIncrease="1"-->
            <!--app:typerSpeed="40"-->
            <!--tools:visibility="visible"-->
            <!--style="@style/TextStyle.Cabin.Caption.Big" />-->

    </RelativeLayout>

</layout>