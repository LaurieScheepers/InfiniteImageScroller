<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="laurcode.com.retire.startup.viewmodel.SplashViewModel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_bigger"
        android:paddingBottom="@dimen/padding_bigger"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/black_friday_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextStyle.Cabin.Body.Regular"
            android:text="@string/black_friday_hint"
            android:visibility="invisible"
            tools:visibility="visible"
            android:paddingStart="@dimen/padding_massive"
            android:paddingBottom="@dimen/padding_medium"
            tools:ignore="RtlSymmetry" />


        <LinearLayout
            android:id="@+id/black_friday_text_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_gravity="end"
            tools:ignore="RtlSymmetry,UseCompoundDrawables">

            <TextView
                android:id="@+id/black_friday_hint_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextStyle.Cabin.Caption.Medium"
                android:paddingEnd="@dimen/padding_big"
                android:visibility="invisible"
                tools:visibility="visible"
                android:text="@string/black_friday_hint_hint" />

            <ImageView
                android:id="@+id/black_friday_hint_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:paddingEnd="@dimen/padding_huge"
                tools:visibility="visible"
                app:srcCompat="@drawable/ic_diagonal_right_up_arrow"
                android:contentDescription="@string/content_description_image_black_friday_deals" />

        </LinearLayout>

    </LinearLayout>

</layout>