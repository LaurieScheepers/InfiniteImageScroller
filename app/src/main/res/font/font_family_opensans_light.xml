<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Open Sans Light is used for body text -->

    <!-- light -->
    <font
        android:font="@font/opensans_light"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/opensans_light"
        app:fontStyle="normal"
        app:fontWeight="400"
        tools:ignore="UnusedAttribute" />

    <!-- light italic -->
    <font
        android:font="@font/opensans_lightitalic"
        android:fontStyle="italic"
        android:fontWeight="400"

        app:font="@font/opensans_lightitalic"
        app:fontStyle="italic"
        app:fontWeight="400"
        tools:ignore="UnusedAttribute" />

</font-family>