<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Open Sans Regular is used for deck text (intro below heading) -->
    <!-- Open Sans Light is used for body text -->

    <!-- regular -->
    <font
        android:font="@font/opensans_regular"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/opensans_regular"
        app:fontStyle="normal"
        app:fontWeight="400"
        tools:ignore="UnusedAttribute" />

    <!-- italic -->
    <font
        android:font="@font/opensans_italic"
        android:fontStyle="italic"
        android:fontWeight="400"

        app:font="@font/opensans_italic"
        app:fontStyle="italic"
        app:fontWeight="400"
        tools:ignore="UnusedAttribute" />

</font-family>