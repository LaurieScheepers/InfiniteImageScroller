    </style>

    <style name="OrangeButtonStyle.FullWidth" parent="TextStyle.Button.Light">
        <item name="android:foreground">@drawable/transparent_full_width_ripple</item>
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@android:color/white</item>
