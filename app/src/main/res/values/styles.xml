        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MagentaButtonStyle" parent="TextStyle.Button.Light">
        <item name="android:foreground">@drawable/transparent_ripple</item>
        <item name="android:background">@drawable/magenta_button</item>
        <item name="android:textColor">@color/magenta</item>
        <item name="android:textAllCaps">true</item>
