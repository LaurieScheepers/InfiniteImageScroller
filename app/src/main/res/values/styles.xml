    <style name="BlackButtonStyle.FullWidth" parent="TextStyle.Button.Dark">
        <item name="android:foreground">@drawable/transparent_full_width_ripple</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@android:color/white</item>
