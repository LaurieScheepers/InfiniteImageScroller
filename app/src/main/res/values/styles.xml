    </style>

    <style name="YellowButtonStyle" parent="TextStyle.Button.Light">
        <item name="android:foreground">@drawable/transparent_ripple</item>
        <item name="android:background">@drawable/yellow_button</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="YellowButtonStyle.FullWidth" parent="TextStyle.Button.Light">
        <item name="android:foreground">@drawable/transparent_full_width_ripple</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:textColor">@android:color/white</item>
