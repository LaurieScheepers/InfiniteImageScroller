    <style name="OrangeButtonStyle" parent="TextStyle.Button.Light">
        <item name="android:foreground">@drawable/transparent_ripple</item>
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:textColor">@color/orange</item>
