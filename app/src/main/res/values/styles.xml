    <!-- END BUTTON STYLES -->

    <style name="TextAppearance.Heading.Large" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/charcoal_text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Heading.Medium" parent="TextAppearance.Heading.Large">
